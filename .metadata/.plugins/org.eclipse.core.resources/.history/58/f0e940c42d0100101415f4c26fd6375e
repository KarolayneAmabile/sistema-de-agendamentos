package view;

import controller.SalonController;
import javax.swing.*;
import java.awt.*;

public class ServicePanel extends JFrame {
    public ServicePanel(SalonController controller) {
        setTitle("Cadastrar Serviço");
        setSize(400, 200);
        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        setLayout(new GridLayout(3, 2));

        add(new JLabel("Nome do Serviço:"));
        JTextField nomeField = new JTextField();
        add(nomeField);

        add(new JLabel("Preço:"));
        JTextField precoField = new JTextField();
        add(precoField);

        JButton confirmar = new JButton("Cadastrar");
        add(confirmar);

        setVisible(true);
    }
}
