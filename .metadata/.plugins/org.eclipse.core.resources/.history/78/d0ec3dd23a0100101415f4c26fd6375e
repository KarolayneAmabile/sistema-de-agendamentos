package factory;

import java.math.BigDecimal;

import exceptions.StrException;
import models.Appointment;
import models.Service;

public class SalonFactory {
	private static int serialService = 0;
	private static int serialAppointment = 0;
	
	public static Service createService(String serviceName, BigDecimal price) {
		Service service = null;
		try {
			service = new Service(serialService, serviceName, price);
			serialService++;
		} catch (StrException e) {
            e.printStackTrace();
		}
		return service;
	}
	
	public static Appointment createAppointment(String customer, String date, String time, Service service) {
		Appointment appointment = null;
		try {
				appointment = new Appointment(serialAppointment, customer, date, time, service);
				serialAppointment++;
		} catch (StrException e) {
			e.printStackTrace();
		}
		return appointment;
	}
}
