package models;

import java.math.BigDecimal;

import exceptions.StrException;

public class Service {
	private int id;
	private String serviceName;
	private BigDecimal price;
	
	public Service(int id, String serviceName, BigDecimal price) throws StrException {
		this.id = id;
		this.setServiceName(serviceName);
		this.setPrice(price);
	}
	
	public String getServiceName() {
		return this.serviceName;
	}
	public void setServiceName(String serviceName) {
		this.serviceName = serviceName;
	}
	
	public BigDecimal getPrice() {
		return this.price;
	}
	public void setPrice(BigDecimal price) throws StrException {
		if (price == null || price.compareTo(BigDecimal.ZERO) <= 0) {
	        throw new StrException("O preço deve ser maior que zero e não pode ser nulo.");
	    }
	    this.price = price;

	}
    @Override
    public String toString() {
        return serviceName;
    }
}
